<html>
  <head>
    <meta name="viewport" charset="utf-8" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Socket.IO chatroom</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
  </head>
  <body>
    <div id="chatroom" style="display: none;">
      <ul id="messages"></ul>
      <div class="container-fluid typing" id="isTypingDiv">
        <span class="typingText" id="isTyping"></span>
      </div>
      <form action="" class="form-inline">
        <div class="container-fluid">
          <div class="row">
            <div class="col-3 col-sm-2 col-md-1">
              <div class="row">
                <input type="color" class="col-6" value="#000002" id="color" />
                <input id='img' type="file" name="file" accept="image/*">
                <label for="img" class="col-6"><i class="fas fa-upload"></i></label>
              </div>
            </div>
            <div class="col-9 col-sm-10 col-md-11">
              <div class="row">
                <input id="m" autocomplete="off" class="col-10" />
                <button class="btn btn-default col-2">Send</button>
              </div>
            </div>            
          </div>
        </div>
      </form>
    </div>
    <div class="container" id="login">
      <p>Enter your username</p>
      <hr class="style-eight">
      <input type="text" id="username" placeholder="Username">
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
    <script src="/js/chatroom.js"></script>
  </body>
</html>